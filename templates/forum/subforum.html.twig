{% extends 'forum/index.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        ul{list-style: none;}
        #navbar ul {list-style: none; display: flex; flex-direction: row; justify-content: space-evenly}
    </style>



    <div class="example-wrapper">
        {% block head %}
            <div>
            <a href="{{ app.request.uri }}/..">Back</a>
            </div>
            {{ parent() }}{% endblock %}

        <ul id="thread_list">
            {% for t in threads %}
                <li class="thread">
                    <div class="thread_title">
                        <a href="{{ app.request.uri }}/{{ t.id }}">{{ t.title }}</a> : {{ t.user.username }} : {{ t.dateCreated.date|date("d.m.Y. H:s") }}
                    </div>
                    <div class = "user_info"></div>

                </li>

            {% endfor %}
        </ul>

    </div>

    <div class = "form">
        {{ form(form) }}
    </div>

{% endblock %}
