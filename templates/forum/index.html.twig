    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% block head %}<h1>WELCOME TO THE COLORBLIND FORUM!</h1>
    <h2>WE USE NO COLORS!</h2>
    {% endblock %}

    {% block content %}
        <ul>
            {% for c in content %}
                <li><a href="{{ app.request.uri }}/{{ c.id }}">{{ c.title }}</a></li>

            {% endfor %}
        </ul>
    {% endblock %}

</div>



{% endblock %}
