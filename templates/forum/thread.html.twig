{% extends 'forum/subforum.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .avatar {max-width: 100px;}
        .message {display: flex; flex-direction: row; align-items: center}
        .content {padding: 50px; display: flex; flex-direction: column; width:100%}
        .content_head {}
        .avatar_wrap {padding-right: 20px; border-right: solid 1px;}
        .username {text-align: center}
        ul{list-style: none;}
        .subforum_list li {padding-bottom: 40px;}


    #navbar ul {list-style: none; display: flex; flex-direction: row; justify-content: space-evenly}

    </style>

    <div class="example-wrapper">

        {% block head %}{{ parent() }}{% endblock %}

        <ul id="subforum_list">
        {% for m in messages %}
            <li class="message"><div class = "avatar_wrap">
                    <div class="username">{{ m.user.username }}</div>
                    <img class="avatar" alt="avatar" src="{{ asset('img/' ~ m.user.image) }}">
                </div>

                <div class="content">
                    <div class="content_head">
                        {{ m.dateCreated.date|date("d.m.Y H:s") }}
                    </div>
                    <div class="content_message">
                        {{ m.content }}
                    </div>
                    </div>
                </div>
            </li>
        {% endfor %}
        </ul>

    </div>

    <div class = "form">
        {{ form(form) }}
    </div>
{% endblock %}
